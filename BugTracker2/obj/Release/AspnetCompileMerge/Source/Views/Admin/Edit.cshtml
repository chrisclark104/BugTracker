@model BugTracker2.Models.AdminUserViewModel


<h2>Edit User - @Model.User.Fname @Model.User.Lname</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.User.Id)

    @Html.AntiForgeryToken()
    @Html.ListBox("SelectedRoles", Model.Roles)

    <input type="submit" value="Save" class="btn btn-default" href="~/Views/Admin/Index.cshtml"/>
}

